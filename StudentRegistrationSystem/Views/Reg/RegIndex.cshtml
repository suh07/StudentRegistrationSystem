@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/Scripts/css/login_css.css">
    <link rel="stylesheet" href="~/Scripts/css/Navbar.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    @*https://codeseven.github.io/toastr/*@
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">

    <script type="text/javascript" src="~/Scripts/js/RegisterScript.js"></script>

</head>
<body>

    <ul>
        <li><a href="@Url.Action("Home", "HomePage")">Home</a></li>
        <li><a class="active" href="#news">Register</a></li>

    </ul>

    <form action="/action_page.php">
        <div class="container">
            <h1>Register</h1>

            <hr>

            <label for="fname"><b>First Name</b></label>
            <input type="text" id="firstname" name="firstname" placeholder="Your first name..">

            <label for="lname"><b>Last Name</b></label>
            <input type="text" id="lastname" name="lastname" placeholder="Your last name..">

            <label for="nid"><b>NID</b></label>
            <input type="text" placeholder="Please enter NID" name="nid" id="nid" required>

            <label for="address"><b>Address</b></label>
            <input type="text" placeholder="Enter Address" name="address" id="address" required>

            <label for="phone"><b>Phone Number</b></label>
            <input type="text" placeholder="Phone Number" name="phone" id="phone" required>

            <label for="guardian"><b>Guardian Name</b></label>
            <input type="text" placeholder="Enter Guardian Name" name="guardian" id="guardian" required>

            <label for="dob"><b>Date of Birth</b></label>
            <input type="date"  name="dob" id="dob" required>

            <label for="email"><b>Email</b></label>
            <input type="text" placeholder="Enter Email" name="email" id="emailAddress" required>

            <label for="psw"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="psw" id="password" required>

            <label for="psw"><b>Re-Enter Password</b></label>
            <input type="password" placeholder="Re-Enter Password" name="psw" id="password2" required>

            <hr>


            <button onclick="register()" type="submit" class="registerbtn">Register </button>

            <!-- <p><button class="registerbtn" onclick="window.location = '@Url.Action("RegIndex", "Reg")'">Register</button></p>-->
        </div>

        <div class="container signin">
            <p>Already have an account? <a href="@Url.Action("Index", "Logins")">Login</a>.</p>
        </div>
    </form>

</body>
</html>

